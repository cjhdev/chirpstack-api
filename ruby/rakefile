require 'rake/testtask'
require 'grpc'

task :update do
  `grpc_tools_ruby_protoc -I/googleapis -I../protobuf --ruby_out=lib/chirp_stack_api/protobuf --grpc_out=lib/chirp_stack_api/protobuf #{Dir["../protobuf/**/*.proto"].join(" ")}`
end

Rake::TestTask.new do |t|
  t.name = :test
  t.libs << "lib"
  t.test_files = FileList["test/**/*_test.rb"]
end
