require 'rake/testtask'

task :update do
  `grpc_tools_ruby_protoc -Iupstream/protobuf --ruby_out=lib/chirp_stack_api/protobuf --grpc_out=lib/chirp_stack_api/protobuf ../protobuf/**/*.proto`
end

Rake::TestTask.new do |t|
  t.name = :test
  t.libs << "lib"
  t.test_files = FileList["test/**/*_test.rb"]
end
